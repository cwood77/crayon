sweep real 0.88 < 1.0 +0.05 -> l :

   echo "=========> attemping lightness {$l}"

   load-image r"nerd.bmp" :
      survey-objects:
         select idx 0 :
            crop

      survey-frame:
         fill rgb{0,0,255}
         tighten min-lightness $l
         loosen rgb{0,0,0}
         loosen rgb{255,0,0}
         loosen rgb{0,0,0}
      save-image r"out-outline-{$l}.bmp"
